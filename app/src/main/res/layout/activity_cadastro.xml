<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CadastroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="39dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/cadastrar_produto"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="21sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/igm_photo_product"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/ic_menu_camera" />

        <EditText
            android:id="@+id/txt_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nome_do_produto"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/txt_qtde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/quantidade"
            android:inputType="number"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/txt_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0.00 Mt"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btn_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inserir" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>